      d:DesignHeight="450" d:DesignWidth="800"
      Title="PausePage" Height="894" Width="1426.666">

    <Grid>
        <Image Source="img/UI/Pause_back.jpg" Margin="-120,-54,-62,-60"></Image>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="100" MinWidth="100">
